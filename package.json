{
	"name": "covau",
	"version": "0.0.1",
	"scripts": {
		"netlify-dev": "cd functions && netlify dev",
		"netlify-serve": "cd functions && netlify serve",
		"netlify-deploy": "npm run build && cd functions && netlify deploy",
		"netlify-deploy-prod": "npm run build && cd functions && netlify deploy --prod",
		"dev": "concurrently \"npm run dev:vite\" \"npm run dev:tailwind\"",
		"dev:vite": "vite dev",
		"dev:tailwind": "postcss tailwind.css -o tailwind-index.css -w",
		"build": "npm run build:vite && npm run build:static",
		"build:vite": "vite build",
		"build:static": "cp -r ./static ./build/.",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-netlify": "^2.0.6",
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/vite-plugin-svelte": "^2.4.0",
		"@tsconfig/svelte": "^4.0.1",
		"@types/cookie": "^0.5.1",
		"autoprefixer": "^10.4.15",
		"concurrently": "^8.2.1",
		"postcss": "^8.4.28",
		"postcss-cli": "^10.1.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^4.2.0",
		"svelte-check": "^3.4.3",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"type": "module",
	"dependencies": {
		"@netlify/functions": "^1.4.0",
		"@types/youtube": "^0.0.47",
		"async-mutex": "^0.4.0",
		"dashjs": "^4.6.0",
		"firebase": "^9.22.0",
		"nanoid": "^5.0.1",
		"svelte-spa-router": "^3.3.0",
		"youtubei.js": "^6.0.0"
	}
}
